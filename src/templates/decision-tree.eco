<% for stepId, {question, choices, details} of @steps: %>
  <% continue unless question? or choices? or details? %>

  <div class="decision-tree-step" data-step-id="<%= stepId %>">
    <% if question?: %>
      <div class="decision-tree-question">
        <%- question %>
      </div>
    <% end %>

    <% if choices?: %>
      <% for {type, value, label, image, color}, i in choices: %>
        <div class="decision-tree-choice" data-color="<%= color %>">
          <% shapes = ['point', 'circle', 'ellipse', 'rect'] %>
          <% if type in shapes: %>
            <button data-shape="<%= type %>" name="<%= stepId %>" value="<%= value %>">
              <% if image?: %>
                <img src="<%= image %>" />
              <% end %>
              <% if label?: %>
                <div class="label"><%- label %></div>
              <% end %>
              <div class="count"></div>
            </button>
          <% else if type in ['radio', 'checkbox']: %>
            <label>
              <input type="<%= type %>" name="<%= stepId %>" value="<%= value %>" />
              <span class="input-clickable">
                <% if image?: %>
                  <img src="<%= image %>" />
                <% end %>
                <% if label?: %>
                  <span class="label"><%- label %></span>
                <% end %>
              </span>
            </label>
          <% else if type is 'answer' or not type?: %>
            <% answerProvided = true %>
            <button name="<%= stepId %>" value="<%= value %>" class="decision-tree-answer">
              <% if image?: %>
                <img src="<%= image %>" />
              <% end %>
              <% if label?: %>
                <span class="label"><%- label %></span>
              <% end %>
            </button>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <% unless answerProvided: %>
      <div class="decision-tree-choice default-choice">
        <button name="<%= stepId %>" value="NO_VALUE" class="decision-tree-answer default-answer">
          <span class="label"><%- @defaultContinueLabel %></span>
        </button>
      </div>
    <% end %>

    <% if details?: %>
      <hr />

      <% for {type, label, image, value}, i in details: %>
        <div class="decision-tree-detail">
          <% if type in ['radio', 'checkbox']: %>
            <label>
              <input type="<%= type %>" name="<%= value %>" />
              <span class="input-clickable">
                <% if image?: %>
                  <img src="<%= image %>" />
                <% end %>
                <% if label?: %>
                  <span class="label"><%- label %></span>
                <% end %>
              </span>
            </label>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
