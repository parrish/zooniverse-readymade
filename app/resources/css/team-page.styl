.readymade-team-page
  .readymade-team-group-title
    border-bottom: 1px solid
    font-size: 24px
    font-weight: 100
    margin-bottom: 0.5em

  .readymade-team-group
    clearfix()
    margin-bottom: 2em

  .readymade-team-member
    is-a-column(3)
    margin-bottom: 2em

  .readymade-team-member-photo
    background: rgba(gray, 0.3)
    height: 60px
    margin: 5% 0
    position: relative

    img
      display: block
      left: 50%
      margin: 0 auto
      max-height: 115%
      max-width: 105%
      position: absolute
      top: 50%
      transform: translate(-50%, -50%)

  .readymade-team-member-header
    font-size: 12px
    letter-spacing: 1px
    text-transform: uppercase

    a
      text-decoration: none
      color: inherit
      opacity: 0.75

      &:hover
        opacity: 1

  .readymade-team-member-name
    font-weight: bold

  .readymade-team-member-title,
  .readymade-team-member-location
    opacity: 0.5

  .readymade-team-member-description
    font-size: 12px
