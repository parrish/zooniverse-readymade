.readymade-mini-tutorial-underlay
  background: rgba(black, 0.5)
  bottom: 0
  display: none
  left: 0
  opacity: 0
  position: fixed
  right: 0
  top: 0
  transition: opacity 0.25s

  &[data-transitioning],
  &[data-open]
    display: block

  &[data-open]
    opacity: 1

.readymade-mini-tutorial-dialog
  background: white
  border-radius: 5px
  box-shadow: 0 1px 3px black
  color: black
  display: flex
  flex-direction: column
  max-height: 80vh
  left: 50%
  overflow: hidden
  perspective: 500px
  position: absolute
  top: 50%
  transform: translate3d(-50%, -50%, 0) scale(2, 0)
  transform-origin: 50% 50%
  transition: transform 0.125s

  [data-open] > &
    transform: translate3d(-50%, -50%, 0) scale(1, 1)

[name="readymade-mini-tutorial-close"]
  @extends #_RESET_BUTTON
  position: absolute
  right: 0
  top: 0
  width: 1.5em
  height: 1.5em
  z-index: 2

.readymade-mini-tutorial-images
  flex: 0 0 auto
  position: relative
  z-index: 1

.readymade-mini-tutorial-image
  display: block
  margin: 0 auto

  &:not([data-readymade-active])
    display: none

.readymade-mini-tutorial-contents
  flex: 1 1 auto
  overflow: auto
  padding: 1em 3em
  position: relative

.readymade-mini-tutorial-content:not([data-readymade-active])
  display: none

.readymade-mini-tutorial-actions
  flex: 0 0 auto
  padding: 0.5em 3em
  text-align: center

  button
    @extends #_RESET_BUTTON
    background: white
    border: 1px solid rgba(black, 0.5)
    border-radius: 3px
    box-shadow: 0 2px 2px -3px black
    margin: 0 0.5em
    padding: 0.25em 2em
    transform: translateY(0)

    &:hover
      border-color: rgba(black, 1)

    &:active
      box-shadow: 0 0 3px rgba(black, 0.25) inset
      transform: translateY(1px)

    &[name="readymade-mini-tutorial-previous"]
      display: none

    &[name="readymade-mini-tutorial-next"],
    &[name="readymade-mini-tutorial-finish"]
      font-weight: bold

      &:disabled
        display: none

.readymade-mini-tutorial-steppers
  display: flex
  flex: 0 0 auto
  justify-content: center
  padding: 0.5em 3em 2em

[name="readymade-mini-tutorial-stepper"]
  @extends #_RESET_BUTTON
  border: 2px solid
  border-radius: 50%
  height: 8px
  margin: 0 5px
  overflow: hidden
  text-index: -1em
  width: 8px

  &[data-readymade-active]
    background: currentColor
