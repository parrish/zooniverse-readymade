@require '../../node_modules/zooniverse/css/top-bar.css'
@require '../../node_modules/zooniverse/css/dialog.css'

.main-stack
  margin: 0 auto
  width: 80%

.classify-page
  .classification-interface
    display: table
    table-layout: fixed
    width: 100%

  .subject-viewer
    color: gray
    display: table-cell
    overflow: hidden
    text-align: center
    vertical-align: middle
    width: 75%

  .marking-surface
    max-width: 100%

  .marking-surface-svg
    height: 100%
    width: 100%

  .frame-toggles
    ul
      display: inline

    li
      display: inline

  .decision-tree
    display: table-cell
    vertical-align: middle
    width: 25%

.decision-tree-step:not(.selected)
    display: none
