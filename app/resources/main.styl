@require '../../node_modules/zooniverse/css/top-bar.css'
@require '../../node_modules/zooniverse/css/dialog.css'

BLUE = #08f

#_RESET_BUTTON
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  text-shadow: inherit

  &:disabled
    pointer-events: none

html
  background: #555
  color: white
  font: 14px/2 "Helvetica Neue", Arial, sans-serif

body
  margin: 0

a
  color: BLUE
  text-decoration: none

.readymade-site-header
  padding: 20px 10vw 0

  .readymade-creator
    display: inline-block
    line-height: 1

    a
      color: inherit

  .readymade-project-producer
    border-bottom: 1px solid
    font-size: 12px
    font-weight: bold
    letter-spacing: 2px
    margin-left: -1em
    padding-bottom: 1px
    text-transform: uppercase
    transition: font-size 0.25s

    [data-location-hash="#/"] &
      font-size: 24px

  .readymade-project-title
    font-size: 36px
    font-weight: lighter
    letter-spacing: 2px
    text-transform: uppercase
    transition: font-size 0.25s

    [data-location-hash="#/"] &
      font-size: 64px

  .readymade-site-links
    display: inline-block
    line-height: 1
    margin-left: 1em

  .readymade-site-link
    border-radius: 3px
    color: inherit
    font-size: 12px
    font-weight: bold
    letter-spacing: 2px
    padding: 0.5em 1em
    text-transform: uppercase
    margin-bottom: -0.5em

    &:hover
      background: rgba(white, 0.1)

.readymade-main-stack
  margin: 20px auto
  width: 80vw

.readymade-home-page
  .readymade-project-summary
    font-size: 36px
    font-weight: lighter

.readymade-classification-interface
  display: table
  table-layout: fixed
  width: 100%

  .readymade-subject-viewer
    display: table-cell
    overflow: hidden
    text-align: center
    vertical-align: middle
    width: 75%

  .readymade-marking-surface-container
    overflow: auto

  .marking-surface
    max-height: 90vh

  .marking-surface-svg
    color: lime

  .readymade-frame-controls
    line-height: 1

  .readymade-frame-play-controls
    display: inline-block
    margin-right: 10px

    button
      @extends #_RESET_BUTTON
      text-shadow: 0 1px 3px black
      width: 1.5em
      height: 1.5em

      &:disabled
        display: none

  .readymade-frame-toggles-list
    display: inline-block

    button
      @extends #_RESET_BUTTON
      background: rgba(black, 0.25)
      border-radius: 50%
      box-shadow:
        0 1px 3px black inset,
        0 1px 0 rgba(white, 0.25)
      color: transparent
      height: 1em
      width: 1em
      overflow: hidden
      position: relative

      &[data-selected]:before
        background: white
        border-radius: 50%
        content: ""
        height: 50%
        left: 50%
        position: absolute
        top: 50%
        width: 50%
        transform: translate(-50%, -50%)

  .decision-tree
    display: table-cell
    padding-left: 15px
    vertical-align: middle
    width: 25%

  button[name="decision-tree-go-back"]
    // @extends #_RESET_BUTTON
    // TODO

  .decision-tree-question
    text-align: center

  .decision-tree-input-wrapper
    position: relative

    input
      position: absolute
      visibility: hidden

  .decision-tree-clickable
    border-radius: 3px
    cursor: pointer
    font: inherit
    font-weight: bold
    margin-bottom: 5px
    padding: 5px 10px
    position: relative
    width: 100%

    &:hover
      background rgba(white, 0.1)

  .decision-tree-tickbox
    background: inherit
    box-shadow: inherit
    border: 3px solid transparent
    display: inline-block
    vertical-align: middle
    height: 1em
    position: relative
    width: 1em

  .decision-tree-tick
    box-sizing: border-box
    border: 2px solid
    height: 100%
    width: 100%

  .decision-tree-image
    display: inline-block
    line-height: 1
    vertical-align: middle

    img
      display: block

  .decision-tree-label
    display: inline-block
    vertical-align: middle

  .decision-tree-radio,
  .decision-tree-drawing
    .decision-tree-tickbox,
    .decision-tree-tick
      border-radius: 50%

  .decision-tree-button .decision-tree-tickbox
    display: none

  :focus + .decision-tree-clickable
    outline: 1px dotted // TODO: Glow? Probably depends on the browser.

  :checked + .decision-tree-clickable
    background: BLUE
    color: white

    .decision-tree-tick
      background: rgba(white, 0.5)

  .decision-tree-confirmation
    text-align: center

  button[name="decision-tree-confirm-task"]
